<!-- Checks if act has a photo.  if not, then will use beatles as placeholder -->
<% if @act.photo? %>
 <% banner_photo_path = @act.photo.path %>
<% else %>
  <% banner_photo_path = ('images_uavnkt') %>
<% end %>


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path banner_photo_path %>');">
</div>


<div class="container padded">
  <div class="media">
    <div class="media-body">


    <div class="name">
      <h1><%= @act.name %></h1>
    </div>

    <div class="categories">
      <h3><%= @act.genre %> | <%= @act.good_for %></h3>
    </div>


    <div class="gallery-section">
      <h4>GALLERY</h4>
      <div class="row">
        <div class="col-xs-6">
          <%= cl_image_tag("images_ltkd5s", width: 400, crop: :fill) %>
        </div>
        <div class="col-xs-6">
          <%= cl_image_tag("images_uavnkt", width: 400, crop: :fill) %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6">
          <%= cl_image_tag("images_ltkd5s", width: 400, crop: :fill) %>
        </div>
        <div class="col-xs-6">
          <%= cl_image_tag("images_uavnkt", width: 400, crop: :fill) %>
        </div>
      </div>
    </div>

    <div class="media-section">
      <h4>FOLLOW <%= @act.name.upcase %></h4>
      <div class="socials">
        <ul class="list-inline">
          <li><a href=""><i class="fa fa-youtube"></i></a></li>
          <li><a href=""><i class="fa fa-instagram"></i></a></li>
          <li><a href=""><i class="fa fa-facebook"></i></a></li>
          <li><a href=""><i class="fa fa-twitter"></i></a></li>
        </ul>
      </div>
    </div>

    <div class="media-section">
      <h4>DESCRIPTION</h4>
      <div class="description">
        <p><%= @act.description * 5 %></p>
      </div>
    </div>
    </div>

