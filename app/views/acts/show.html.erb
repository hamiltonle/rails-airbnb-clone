<!-- Checks if act has a photo.  if not, then will use beatles as placeholder -->
<% if @act.photos? %>
  <% banner_photo_path = @act.photos.first.path %>
<% else %>
  <% banner_photo_path = ('images_uavnkt') %>
<% end %>



<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path banner_photo_path %>');">
</div>


<div class="container padded">
  <div class="media">
    <div class="media-body">


    <div class="name">
      <h1><%= @act.name %></h1>
    </div>

    <div class="categories">
      <h3><%= @act.genre %> | <%= @act.good_for %></h3>
    </div>

    <h4>GALLERY</h4>
    <div class="gallery-section">
      <div class="row">

        <!-- Loops through all the users photos -->
        <% @act.photos.each do |photo| %>
          <div class="col-xs-4 gallery-image">
            <%= cl_image_tag photo.path, height: 200, width: 200, crop: :lfill %>
          </div>
        <% end %>

      </div>
    </div>

    <div class="media-section">
      <h4>FOLLOW <%= @act.name.upcase %></h4>
      <div class="socials">
        <ul class="list-inline">
          <li><a href=""><i class="fa fa-youtube"></i></a></li>
          <li><a href=""><i class="fa fa-instagram"></i></a></li>
          <li><a href=""><i class="fa fa-facebook"></i></a></li>
          <li><a href=""><i class="fa fa-twitter"></i></a></li>
        </ul>
      </div>
    </div>

    <div class="media-section">
      <h4>DESCRIPTION</h4>
      <div class="description">
        <p><%= @act.description * 5 %></p>
      </div>
    </div>
    </div>

