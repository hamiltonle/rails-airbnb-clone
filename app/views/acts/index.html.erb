

<div class="wrapper">
  <div class="container">
    <div class="row">
      <% @acts.each do |act| %>
        <div class="col-xs-4 card">
        <h3><%= act.name %></h3>
        <p>Description: <%= act.description %></p>
        <p>Good For: <%= act.good_for %></p>
        <p>Genre: <%= act.genre %></p>
      <% end %>

      </div>

    </div>
  </div>
</div>
